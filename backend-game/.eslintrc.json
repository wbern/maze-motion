{
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "io": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-case-declarations": "off",
        "prefer-const": "error",
        "indent": ["error", 4],
        "no-console": "off",
        "quotes": ["error", "double"],
        "semi": ["error", "always"]
    }
}
